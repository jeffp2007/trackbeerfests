<% @beers.each do |beer| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h2><%= link_to beer.beer_name, beer_path(beer) %></h2>
    <p><%= beer.beer_style %> &nbsp; | &nbsp; <%= beer.beer_abv %>% ABV &nbsp; | &nbsp; <%= beer.beer_ibu %> IBU</p><br />
    <p><%= beer.beer_description %></p>
  </div>

<% end %>